# PDF Searcher - Environment Variables Template
# Copy this file to .env.local and replace placeholder values with your actual credentials
# NEVER commit .env.local to git - it should contain real secrets

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Google Document AI Configuration
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us

# Document AI Processors
GOOGLE_CLOUD_PROCESSOR_ID=your_primary_processor_id
GOOGLE_CLOUD_OCR_PROCESSOR_ID=your_ocr_processor_id
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-service-account.json

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=your-pinecone-index-name

# Cron Job Security
CRON_SECRET=generate_a_secure_random_string_here

# Database Connection Pooling - Enterprise Scale
DB_POOL_MIN_CONNECTIONS=20
DB_POOL_MAX_CONNECTIONS=200
DB_POOL_IDLE_TIMEOUT=60000
DB_POOL_CONNECTION_TIMEOUT=30000

# Enterprise Processing Limits
MAX_CONCURRENT_DOCUMENTS=20
MAX_CONCURRENT_CHUNKS_PER_DOC=50
LARGE_DOCUMENT_THRESHOLD_MB=5

# Logging Configuration
VERBOSE_LOGS=true

# Paragraph-based Chunking Configuration (v4.5.0 - greedy algorithm)
# Note: PARAGRAPHS_PER_CHUNK and PARAGRAPH_OVERLAP are no longer used in v4.5.0
# MIN_CHUNK_TOKENS is still used in fallback sentence-based chunking paths
# The greedy algorithm automatically adapts to paragraph sizes using only MAX_CHUNK_TOKENS
MAX_CHUNK_TOKENS=250            # Maximum tokens per chunk (strict limit for greedy algorithm)
